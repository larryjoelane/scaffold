    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "run templatizer with args",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js",
            "args": ["--wrap", "-t", "templates/webapp", "-y", "variables.webapp", "-o", "output.webapp"]
        }
    ]
}